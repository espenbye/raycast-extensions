{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "zsh-aliases",
  "title": "Zsh Aliases",
  "description": "Manage zsh aliases",
  "icon": "extension-icon.png",
  "author": "espenbye",
  "categories": [
    "Productivity",
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "manage-aliases",
      "title": "Manage Aliases",
      "description": "View, add, edit, and remove zsh aliases",
      "mode": "view"
    }
  ],
  "tools": [
    {
      "name": "add-alias",
      "title": "Add Alias",
      "description": "Add a new zsh alias"
    },
    {
      "name": "remove-alias",
      "title": "Remove Alias",
      "description": "Remove an existing zsh alias"
    },
    {
      "name": "update-alias",
      "title": "Update Alias",
      "description": "Update an existing zsh alias"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.102.4",
    "@raycast/utils": "^2.2.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.22.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}